				<include>org.gvsig:org.gvsig.fmap*</include>
				<include>org.gvsig:org.gvsig.fmap.dal.index.spatial:jar:jsi</include>
				<include>org.gvsig:org.gvsig.i18n</include>
				<include>org.gvsig:org.cresques.dxf</include>
				<include>org.gvsig:org.gvsig.raster</include>
				<include>org.gvsig:org.gvsig.metadata</include>
				<include>org.gvsig:org.gvsig.tools.evaluator.sqljep</include>
				<include>org.gvsig:org.gvsig.projection</include>
				<include>org.gvsig:org.gvsig.compat</include>
				<include>org.gvsig:org.gvsig.compat:jar:cresques-impl</include>

				<include>org.gvsig.legacy:geoapi</include>
				<include>org.gvsig.legacy.ba*:batik*</include>
				<include>org.gvsig.legacy:geojava</include>
				<include>org.gvsig.legacy:gt2*</include>
				<include>*:itext</include>
				<include>org.gvsig.legacy:JimiProClasses</include>
