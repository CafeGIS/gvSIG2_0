<assembly>
  <id>distribution</id>
  <formats>
    <format>dir</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>config</directory>
	  <outputDirectory>${extension-distribution}</outputDirectory>
    </fileSet>  
    <fileSet>
      <directory>configbeans</directory>
	  <outputDirectory>${extension-distribution}/config</outputDirectory>
    </fileSet>    
	<fileSet>
      <directory>images</directory>
	  <outputDirectory>${extension-distribution}/images</outputDirectory>
    </fileSet>
  </fileSets>
  <files>  
    <file>
      <source>build.number</source>
      <outputDirectory>${extension-distribution}</outputDirectory>
    </file>
  </files>
  	<dependencySets>
