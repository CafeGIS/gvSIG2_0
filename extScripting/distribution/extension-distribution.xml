<assembly>
	<id>distribution</id>
	<formats>
		<format>dir</format>
	</formats>
	<fileSets>
	<!-- Extructure for the extension -->
		<fileSet>
			<directory>config</directory>
			<outputDirectory>${extension-distribution}
			</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${scripts-dir}</directory>
			<outputDirectory>${extension-distribution}/${scripts-dir}
			</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>images</directory>
			<outputDirectory>${extension-distribution}/images
			</outputDirectory>
		</fileSet>

	</fileSets>
	<files>
		<file>
			<source>build.number</source>
			<outputDirectory>${extension-distribution}
			</outputDirectory>
		</file>
	</files>
	<!--
		***********************************************************************
	-->
  <!-- *													   *-->
	<!--
		***********************************************************************
	-->
	<dependencySets>
		<dependencySet>
			<outputDirectory>${extension-appgvsig-lib-dir}
			</outputDirectory>
			<includes>
				<include>org.gvsig:org.gvsig.scripting</include>
				<include>org.gvsig.legacy:bsf</include>
				<include>bsh:bsh</include>
				<include>groovy:groovy</include>
				<include>jython:jython</include>
				<include>org.gvsig.legacy:scriptablethinlet</include>
				<include>org.gvsig.legacy:thinlet</include>
				<include>org.gvsig.legacy:js</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
