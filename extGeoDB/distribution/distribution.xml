<assembly>
	<id>distribution</id>
	<formats>
		<format>dir</format>
	</formats>
	<fileSets>
	<!-- Extructure for the extension -->
		<fileSet>
			<directory>config</directory>
			<outputDirectory>${extension-distribution}
			</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>images</directory>
			<outputDirectory>/${extension-distribution}/images
			</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>build.number</source>
			<outputDirectory>${extension-distribution}
			</outputDirectory>
		</file>
	</files>
	<!--
		***********************************************************************
	-->
  <!-- *													   *-->
	<!--
		***********************************************************************
	-->
	<dependencySets>
		<dependencySet>
			<outputDirectory>${extension-distribution}/${library-dir}
			</outputDirectory>
			<includes>
				<include>org.gvsig:org.gvsig.geodb</include>
				<include>org.gvsig:org.gvsig.fmap.dal.db</include>
				<include>org.gvsig:org.gvsig.fmap.dal.db:jar:store.jdbc</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>${extension-distribution}/${library-dir}
			</outputDirectory>
			<includes>
				<include>org.gvsig:org.gvsig.fmap.dal.db:jar:store.jdbc</include>
				<include>commons-dbcp:commons-dbcp</include>
				<include>commons-collections:commons-collections</include>
				<include>commons-pool:commons-pool</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>${extension-distribution}/${library-dir}
			</outputDirectory>
			<includes>
				<include>org.gvsig:org.gvsig.fmap.dal.db:jar:store.postgresql</include>
				<include>postgresql:postgresql</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>${extension-distribution}/${library-dir}
			</outputDirectory>
			<includes>
				<include>org.gvsig:org.gvsig.fmap.dal.db:jar:store.mysql</include>
				<include>mysql:mysql-connector-java</include>
			</includes>
		</dependencySet>		
	</dependencySets>
</assembly>