<assembly>
	<id>distribution</id>
	<formats>
		<format>dir</format>
	</formats>
	<fileSets>
		<!-- Extructure for the extension -->
		<fileSet>
			<directory>config</directory>
			<outputDirectory>${extension-distribution}
			</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>build.number</source>
			<outputDirectory>${extension-distribution}
			</outputDirectory>
		</file>
	</files>

	<dependencySets>
		<dependencySet>
			<outputDirectory>${extension-distribution}/${library-dir}
			</outputDirectory>
			<includes>
				<include>org.gvsig:org.gvsig.help
				</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
